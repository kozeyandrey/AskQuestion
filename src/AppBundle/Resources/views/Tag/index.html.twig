{% extends "::base.html.twig" %}
{% block body %}

    <div class="container">
        <h1>{{ "tags.tags"|trans }}</h1>
        <hr>
            {% for tag in tags %}
                <div class="row col-lg-12">
                    <div class="col-lg-3 thumbnail">
                        <a href="{{ path('view_tag', {'slug':tag.slug}) }}" class="btn btn-primary" role="button">{{ tag.name }}</a>
                        {{ tag.created|date }}
                    </div>
                    <div class="col-lg-12">
                        {{ knp_pagination_render(tags) }}
                    </div>
                    </div>

            {% endfor %}
    </div>
{% endblock %}


