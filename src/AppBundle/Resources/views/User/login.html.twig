{% extends "::base.html.twig" %}
{% block body %}
    <div class="container">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <legend>Login:</legend>
        <div class="active">
            <b>Email</b>
            {{ form_errors(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': "form-control"}}) }}
        </div>
        <br/>
        <div class="active">
            <b>Password</b>
            {{ form_errors(form.password) }}
            {{ form_widget(form.password, {'attr': {'class': "form-control"}}) }}
        </div>
        <br/>
        <div class="panel-body">
            <input type="submit" class="btn btn-primary" value="Send" name="send" id="submit_send">
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}