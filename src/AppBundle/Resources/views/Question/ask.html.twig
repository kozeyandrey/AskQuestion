{% extends "::base.html.twig" %}
{% block body %}
    {% include "::navbar.html.twig" with {'user': user}%}
    {% if user %}
    <div class="container">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <legend>{{ "ask.question"|trans }}:</legend>
        <div class="active">
            <b>{{ "ask.title"|trans }}</b>
            {{ form_errors(form.title) }}
            {{ form_widget(form.title, {'attr': {'class': "form-control"}}) }}
        </div>
        <br/>
        <div class="info-tags">
            <b>{{ "ask.tags"|trans }}</b>
            <input id="write-tags-number" type="text" placeholder="Write the number of tags and press Enter" class="form-control" name="count"/><br/>
            <ul id="writing-tags"></ul>
        </div>
        <div class="active">
            <b>{{ "ask.description"|trans }}</b>
            {{ form_errors(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': "form-control"}}) }}
        </div>
        <br/>
        <div class="active">
            <b>{{ "ask.code"|trans }}</b>
            {{ form_errors(form.code) }}
            {{ form_widget(form.code, {'attr': {'class': "form-control"}}) }}
        </div>
        <br/>
        <div class="panel-body">
            <input type="submit" class="btn btn-primary" value="Send" name="send" id="submit_send">
        </div>

        {{ form_end(form) }}
    </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="{{ asset('bundles/app/js/main.js') }}"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
{% endblock %}
