{% extends "::base.html.twig" %}
{% block body %}
    {% include "::navbar.html.twig" with {'user': user}%}
    <div class="container">
        <h1><h1>{{ "all.all"|trans }}</h1></h1>
        <div class="row">
            <div class="col-xs-12 col-md-11">
                <div class="panel panel-default">
                    <div class="panel-body">
                        {% for question in questions %}
                            <div class="col-md-1">
                                <h3>{{ question.views }}</h3>
                                <h5>{{ "all.views"|trans }}</h5>
                            </div>
                            <div class="col-md-1">
                                <h3>{{ question.response|length }}</h3>
                                <h5>{{ "all.answer"|trans }}</h5>
                            </div>
                            <div class="col-md-7">
                                <h4><a href="{{ path('view', {'slug':question.slug}) }}">{{ question.title }}</a></h4>
                                {% for tag in question.tags %}
                                    <a href="{{ path('view_tag', {'slug':tag.slug}) }}" class="btn btn-primary" role="button">{{ tag.name }}</a>
                                {% endfor %}
                            </div>
                            <div class="col-md-3">
                                <h5>{{ question.created|date }}</h5>
                                <h5>{{ question.user.email }}</h5>
                            </div>
                        {% endfor %}
                    </div>

                </div>
            </div>
            <div class="col-lg-12">
                {{ knp_pagination_render(questions) }}
            </div>
        </div>
    </div>
{% endblock %}