{% extends "::base.html.twig" %}
{% block body %}

    <div class="container">
        <h1>{{ "home.top"|trans }}</h1>
        <div class="row">
            <div class="col-xs-12 col-md-8">
                <div class="panel panel-default">
                    <div class="panel-body">
                        {% for question in questions %}
                            <div class="col-md-2">
                                <h3>{{ question.views }}</h3>
                                <h5>{{ "home.views"|trans }}</h5>
                            </div>
                            <div class="col-md-2">
                                <h3>{{ question.response|length }}</h3>
                                <h5>{{ "home.answer"|trans }}</h5>
                            </div>
                            <div class="col-md-7">
                                <h3><a href="{{ path('view' ,{'slug':question.slug}) }}">{{ question.title }}</a></h3>
                                {% for tag in question.tags %}
                                    <a href="a" class="btn btn-primary" role="button">{{ tag.name }}</a>
                                {% endfor %}
                            </div>
                            <div class="col-md-1">
                            <ul class="nav nav-pills" role="tablist">
                                <li role="presentation"><a href="#"><span class="glyphicon glyphicon-thumbs-up">42</span></a></li>
                                <li role="presentation"><a href="#"><span class="glyphicon glyphicon-thumbs-down">42</span></a></li>
                            </ul>
                            </div>
                        {% endfor %}
                    </div>
                    
                </div>
            </div>
            <div class="col-lg-12">
                {{ knp_pagination_render(questions) }}
            </div>
        </div>
    </div>
{% endblock %}


